server {
  listen 80 default_server;
  server_name _;
  root <%= @root %>;

  index index.php index.html index.htm;

  location / {
    try_files $uri $uri/ / =404;
  }

  # Deny access to .htaccess & .htpasswd files
  location ~ /\.ht {
    deny all;
  }

  access_log /var/log/nginx/access.log;
  error_log  /var/log/nginx/error.log error;
}
